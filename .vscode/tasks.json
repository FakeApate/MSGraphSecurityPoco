{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate POCO",
      "type": "shell",
      "command": "noglob",
      "args": [
        "dotnet",
        "tool",
        "run",
        "dotnet-o2pgen",
        "--url",
        "https://graph.microsoft.com/v1.0/",
        "--ctor",
        "full",
        "--case",
        "pas",
        "-C",
        "pas",
        "--include",
        "Incident",
        "*Evidence*",
        "--nullable",
        "--enable-nullable-reference",
        "-f",
        "${workspaceFolder}${pathSeparator}MSGraphSecurityPoco${pathSeparator}generated${pathSeparator}poco.cs",
        "-G",
        "record",
        "--init-only"
      ]
    }
  ]
}
